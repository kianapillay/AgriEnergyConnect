@{
    ViewData["Title"] = "About";
}
<section class="about-hero">
    <div class="about-hero-text">
        <h1>About Us</h1>
        <p>We're revolutionizing agriculture by connecting farmers, consumers, and communities through sustainable practices and innovation.</p>
    </div>
</section>

<section class="mission-vision container">
    <div class="row align-items-center mb-5">
        <div class="col-md-6">
            <img src="~/images/mission.jpg" class="img-fluid rounded shadow" alt="Our Mission" />
        </div>
        <div class="col-md-6">
            <h2>Our Mission</h2>
            <p>To empower farmers with technology, promote eco-friendly agriculture, and build a transparent farm-to-consumer ecosystem.</p>
        </div>
    </div>
    <div class="row align-items-center">
        <div class="col-md-6 order-md-2">
            <img src="~/images/vision.jpg" class="img-fluid rounded shadow" alt="Our Vision" />
        </div>
        <div class="col-md-6 order-md-1">
            <h2>Our Vision</h2>
            <p>We envision a future where local farming is sustainable, efficient, and accessible to everyone, driving economic growth and community wellbeing.</p>
        </div>
    </div>
</section>

<section class="values-section">
    <div class="container text-center">
        <h2 class="mb-4">Our Core Values</h2>
        <div class="row">
            <div class="col-md-4">
                <div class="value-box">
                    <h4>Innovation</h4>
                    <p>Harnessing technology to improve farming outcomes and efficiency.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="value-box">
                    <h4>Community</h4>
                    <p>Building strong, connected communities through collaboration and transparency.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="value-box">
                    <h4>Sustainability</h4>
                    <p>Protecting the environment and securing future generations of farmers.</p>
                </div>
            </div>
        </div>
    </div>
</section>

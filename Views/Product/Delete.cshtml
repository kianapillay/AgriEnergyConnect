@model Product

@{
    ViewData["Title"] = "Delete Product";
}

<h2 class="text-center orange-heading fw-bold my-4">Delete Product</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="alert alert-warning">
                <strong>Are you sure you want to delete this product?</strong>
            </div>

            <dl class="row">
                <dt class="col-sm-4">Product Name</dt>
                <dd class="col-sm-8">@Model.ProductName</dd>

                <dt class="col-sm-4">Category</dt>
                <dd class="col-sm-8">@Model.Category</dd>

                <dt class="col-sm-4">Description</dt>
                <dd class="col-sm-8">@Model.Description</dd>

                <dt class="col-sm-4">Price</dt>
                <dd class="col-sm-8">R @Model.Price</dd>

                <dt class="col-sm-4">Production Date</dt>
                <dd class="col-sm-8">@Model.ProductionDate.ToShortDateString()</dd>
            </dl>

            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" name="id" value="@Model.ProductId" />
                <button type="submit" class="btn btn-danger w-100">Delete</button>
                <a asp-action="Index" class="btn btn-secondary w-100 mt-2">Cancel</a>
            </form>

        </div>
    </div>
</div>
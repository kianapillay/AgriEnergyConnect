@model IEnumerable<AgriEnergyApp.Models.Farmer>

@{
    ViewData["Title"] = "List of Farmers";
}

<h2 class="orange-heading fw-bold mb-3">List of Farmers</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>FirstName</th>
            <th>Surname</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var farmer in Model)
    {
        <tr>
            <td>@farmer.FarmerId</td>
            <td>@farmer.FirstName</td>
            <td>@farmer.Surname</td>
            <td>@farmer.Email</td>
            <td>
            </td>
        </tr>
    }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Add New Farmer</a>